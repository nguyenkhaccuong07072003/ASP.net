@model List<Advanced.Models.Lophoc>
@{
    ViewBag.Title = "ListCourse";
    Layout = "~/Views/Shared/Separated.cshtml";
}
<section class="course-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <!-- Filter -->
                <div class="showing-list">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <div class="view-icons">
                                    <a href="#" class="grid-view"><i class="feather-grid"></i></a>
                                    <a href="#" class="list-view active"><i class="feather-list"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="show-filter add-course-info ">
                                <form action="@Url.Action("ListClass", "Student")" method="get">
                                    <div class="row gx-2 align-items-center">
                                        <div class="col-md-6 col-item">
                                            <div class=" search-group">
                                                <i class="feather-search"></i>
                                                <input type="text" class="form-control" name="search" placeholder="Search our classes">
                                                <button type="submit" class="btn btn-primary">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->

                <div class="row">
                    @foreach (var lophoc in Model)
                    {
                        <div class="col-lg-12 col-md-12 d-flex">
                            <div class="course-box course-design list-course d-flex">
                                <div class="product">
                                    <div class="product-img">
                                        <a href="~/Teacher/LophocChitiet/@lophoc.class_id">
                                            <img class="img-fluid" alt="" src="@lophoc.Image">
                                        </a>
                                    </div>
                                    <div class="product-content">
                                        <div class="head-course-title">
                                            <h3 class="title"><a href="#">@lophoc.class_name</a></h3>
                                            <div class="all-btn all-category d-flex align-items-center">
                                                <button class="btn btn-primary join-button" data-lophoc-id="@lophoc.class_id" onclick="">Join</button>
                                            </div>
                                        </div>
                                        <div class="course-info border-bottom-0 pb-0 d-flex align-items-center">
                                            <div class="rating-img d-flex align-items-center">
                                                <img src="~/Scripts/assets/img/icon/icon-01.svg" alt="">
                                                <p>@lophoc.content</p>
                                            </div>
                                        </div>
                                        <div class="course-group d-flex mb-0">
                                            <div class="course-group-img d-flex">
                                                <a href="#"><img src="@lophoc.ApplicationUser.Image" alt="" class="img-fluid"></a>
                                                <div class="course-name">
                                                    <h4><a href="#">@lophoc.ApplicationUser.Fullname</a></h4>
                                                    <p>@lophoc.ApplicationUser.ShortDesc</p>
                                                </div>
                                            </div>
                                            <div class="course-share d-flex align-items-center justify-content-center">
                                                <a href="#rate"><i class="fa-regular fa-heart"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- /pagination -->
                <div class="row">
                    <div class="col-md-12">
                        <ul class="pagination lms-page">
                            <li class="page-item prev">
                                <a class="page-link" href="javascript:void(0)" tabindex="-1"><i class="fas fa-angle-left"></i></a>
                            </li>
                            <li class="page-item first-page active">
                                <a class="page-link" href="javascript:void(0)">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">4</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">5</a>
                            </li>
                            <li class="page-item next">
                                <a class="page-link" href="javascript:void(0)"><i class="fas fa-angle-right"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /pagination -->

            </div>
            <div class="col-lg-3 theiaStickySidebar">
                <div class="filter-clear">
                    <div class="clear-filter d-flex align-items-center">
                        <h4><i class="feather-filter"></i>Filters</h4>
                        <div class="clear-text">
                            <p>CLEAR</p>
                        </div>
                    </div>
                    <!-- Search Filter -->
                    <div class="card search-filter">
                        <div class="card-body">
                            <div class="filter-widget mb-0">
                                <div class="categories-head d-flex align-items-center">
                                    <h4>Instructors</h4>
                                    <i class="fas fa-angle-down"></i>
                                </div>
                                @foreach (var teacher in ViewBag.Teacher)
                                {
                                    <div>
                                        <label class="custom_check">
                                            <input type="checkbox" name="id" value="@teacher.UserId" onclick="sendDataToController(this)">
                                            <span class="checkmark"></span>@teacher.Fullname
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /Search Filter -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /Course -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/theia-sticky-sidebar/1.8.0/ResizeSensor.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/theia-sticky-sidebar/1.8.0/theia-sticky-sidebar.min.js"></script>
<script>
    $(document).ready(function () {
        $(".join-button").click(function (e) {
            e.preventDefault(); //
            var lophocId = $(this).data("lophoc-id");
            $.ajax({
                type: 'POST',
                url: "/Student/JoinClass",
                data: { lophoc_id: lophocId },
                dataType: "json",
                success: function (response) {
                    alert(response.message)

                },
                error: function (xhr, status, error) {
                    console.error(error);
                    // Xử lý lỗi ở đây
                }
            });
        });
    });
    $(document).ready(function () {
        $('input[type="checkbox"]').on('change', function () {
            var id = $(this).val();
            if ($(this).is(':checked')) {
                $.get('/Student/ListClass', { id: id }, function (data) {
                    // Xử lý dữ liệu trả về từ server ở đây
                });
            }
        });
    });
    function sendDataToController(element) {
        var id = element.value;

        // Tạo URL cho yêu cầu GET
        var url = "/Student/ListClass?id=" + id;

        // Gửi yêu cầu GET đến server
        window.location.href = url;
    }
    var previousCheckbox = null;

    document.addEventListener("DOMContentLoaded", function () {
        // Lấy tất cả các checkbox có name là "select_specialist"
        var checkboxes = document.querySelectorAll('input[name="select_specialist"]');

        // Lặp qua từng checkbox để thêm sự kiện click
        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('click', function () {
                // Kiểm tra nếu checkbox trước đó đã được chọn, hủy chọn nó trước
                if (previousCheckbox && previousCheckbox !== checkbox) {
                    previousCheckbox.checked = false;
                }
                // Gán checkbox hiện tại là checkbox trước đó
                previousCheckbox = checkbox;
            });
        });
    });
</script>