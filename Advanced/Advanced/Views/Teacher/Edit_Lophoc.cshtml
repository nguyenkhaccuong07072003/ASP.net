@using Microsoft.AspNet.Identity
@model Advanced.Models.EditDetailViewModel
@{
    ViewBag.Title = "Edit_Lophoc";
    Layout = "~/Views/Shared/Separated.cshtml";
}
<section class="page-content course-sec w-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="add-course-header">
                    <h2>Edit your Class</h2>
                    <div class="add-course-btns">
                        <ul class="nav">
                            <li>
                                <a href="~/Teacher/Lophoc?UserId=@User.Identity.GetUserId()" class="btn btn-black">Back to Class</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="widget-set">
                        @using (Html.BeginForm("Edit_Lophoc", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("class_id", Model.Lophoc.class_id)
                            <div class="input-block">
                                @Html.LabelFor(m => m.Lophoc.class_name, new { @class = "add-course-label" })
                                @Html.TextBoxFor(m => m.Lophoc.class_name, new { @class = "form-control" })
                            </div>
                            <div class="input-block">
                                @Html.LabelFor(m => m.Lophoc.content, new { @class = "add-course-label" })
                                @Html.TextBoxFor(m => m.Lophoc.content, new { @class = "form-control" })
                            </div>
                            <div class="input-block">
                                @Html.LabelFor(m => m.Lophoc.Image, new { @class = "add-course-label" })
                                <input type="file" name="fKhoahoc" value="@Model.Lophoc.Image" />
                                <img src="@Model.Lophoc.Image" width="200" height="200" style="margin: 0 30px;" />
                            </div>
                            <div class="row">
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Ngayhoc1, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Ngayhoc1, new { @class = "form-control" })
                                </div>
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Tiet_1, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Tiet_1, new { @class = "form-control" })
                                </div>
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Ngayhoc2, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Ngayhoc2, new { @class = "form-control" })
                                </div>
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Tiet_2, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Tiet_2, new { @class = "form-control" })
                                </div>
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Ngayhoc3, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Ngayhoc3, new { @class = "form-control" })
                                </div>
                                <div class="input-block">
                                    @Html.LabelFor(m => m.Lichhocs.Tiet_3, htmlAttributes: new { @class = "form-control-label" })
                                    @Html.TextBoxFor(m => m.Lichhocs.Tiet_3, new { @class = "form-control" })
                                </div>
                            </div>
                            <div>
                                <table class="table border">
                                    <tr>
                                        <th>Students</th>
                                        <th>Remove</th>
                                    </tr>
                                    @foreach (var member in Model.ClassMembers)
                                    {
                                        <tr>
                                            <th>@member.ApplicationUser.Fullname</th>
                                            <th><input type="checkbox" name="deletedMembers" value="@member.UserId" /></th>
                                        </tr>
                                    }
                                </table>
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Save" class="btn btn-primary btn-start" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

