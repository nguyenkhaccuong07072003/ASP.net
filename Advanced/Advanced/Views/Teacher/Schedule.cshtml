@model Advanced.Models.Lichhoc
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/Separated.cshtml";
}
<h2>Add schedule for @ViewBag.Name</h2>

@using (Html.BeginForm("Schedule", "Teacher", FormMethod.Post))
{
